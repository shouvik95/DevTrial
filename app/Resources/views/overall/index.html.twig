{% extends 'base.html.twig' %}

{% block scrollable %}
    <h1>Overall list</h1>
<div class="table-responsive">
    <table class="records_list table table-striped table-bordered">
        <thead>
            <tr>
                <th>Date</th>
                <th>Home</th>
                <th>Away</th>
                <th>Dateid</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for overall in overalls %}
            <tr>
                <td><a href="{{ path('edit_show', { 'id': overall.dateid }) }}">{% if overall.date %}{{ overall.date|date('Y-m-d') }}{% endif %}</a></td>
                <td>{{ overall.home }}</td>
                <td>{{ overall.away }}</td>
                <td>{{ overall.dateid }}</td>
                <td style="text-align: center; vertical-align: middle;">
                    <ul style="list-style-type: none;">
                        <li>
                            <a class="btn btn-default btn-xs" href="{{ path('edit_show', { 'id': overall.dateid }) }}">show</a>
                        </li>
                        <li style="margin-top: 10px;">
                            <a class="btn btn-default btn-xs" href="{{ path('edit_edit', { 'id': overall.dateid }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

    <ul style="padding: 0; list-style-type: none;">
        <li>
            <a class="btn btn-primary btn-lg" href="{{ path('edit_new') }}" role="button">Create a new entry</a>
        </li>
    </ul>
{% endblock %}

{% block li2 %}
    <li style="margin-top: 300%;">
        <a href="{{ path('logout') }}">
            <i class="fa fa-sign-out fa-2x"></i>
            <span class="nav-text">
                            Log Out
                        </span>
        </a>
    </li>
{% endblock %}