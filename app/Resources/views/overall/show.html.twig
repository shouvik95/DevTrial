{% extends 'base.html.twig' %}

{% block scrollable %}
    <h1>Overall</h1>
<div class="table-responsive">
    <table class="record_properties table">
        <tbody>
            <tr>
                <th>Date</th>
                <td>{% if overall.date %}{{ overall.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Home</th>
                <td>{{ overall.home }}</td>
            </tr>
            <tr>
                <th>Away</th>
                <td>{{ overall.away }}</td>
            </tr>
            <tr>
                <th>Dateid</th>
                <td>{{ overall.dateid }}</td>
            </tr>
        </tbody>
    </table>
</div>

    <ul style="padding: 0; list-style-type: none;">
        <li>
            <a class="btn btn-primary btn-lg" role="button" href="{{ path('edit_index') }}">Back to the list</a>
        </li>
        <li style="margin-top: 10px;">
            <a class="btn btn-primary btn-lg" role="button" href="{{ path('edit_edit', { 'id': overall.dateid }) }}">Edit</a>
        </li>
        <li style="margin-top: 10px;">
            {{ form_start(delete_form) }}
                <input class="btn btn-primary btn-lg" role="button" type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

{% block li2 %}
    <li style="margin-top: 300%;">
        <a href="{{ path('logout') }}">
            <i class="fa fa-sign-out fa-2x"></i>
            <span class="nav-text">
                            Log Out
                        </span>
        </a>
    </li>
{% endblock %}